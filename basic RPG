using System;

namespace Legeng
{
    class Program
    {



        static void Main(string[] args)
        {
            Console.WriteLine("Welcome to Elroz, Land of Monsters and Quest!\n" +
                "\nBefore continuing, we must understand your role young hero." +
                "\nCurrently in our World, there exist Three Guild roles which are labeled as 'The Shield', 'The Sword', and 'The Elixir'." +
                "\nUnderstand that each Guild breaks down their classes into sub-categories." +
                "\nPlease go ahead and decide on a Guild.\n" +
                "\n[Which are you?]\n ");
            Console.WriteLine("To Join the Shield Guild, Enter option '1'.\n" +
                "To Join the Sword Guild, Enter option '2'.\n" +
                "To Join the Elixir Guild, Enter option '3'.\n");

            int selection = int.Parse(Console.ReadLine());
            if(selection == 1)
            {
                ShieldGuild();
            }else if(selection == 2)
            {
                SwordGuild();   
            }else if(selection == 3)
            {
                ElixirGuild();
            }


        }

        private static string ShieldGuild()
        {

            return "";
        }

        private static string SwordGuild()
        {

            return "";
        }

        private static string ElixirGuild()
        {

            return "";
        }


    }
}

